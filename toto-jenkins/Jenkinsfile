
pipeline {
    agent {
        label "$NODE"
    }

    tools {
        nodejs "NODE22" //cle : identifiant de outil / version de outil
    }
    stages {
        stage ("Build presentation") {
            when {
                expression { params.event == 'push' }
            }
            steps {
                sh('node -v') // ecrit shell / ""-> warning interpollation / pour sh utilsier ''.
                sh('npm -v')
                echo "${NODE}"
                echo "${params.event}"
                echo "${params.delivery}"
                echo "${params.hook}"
                echo "${params.trigger}"
            }
        }       
    }
}